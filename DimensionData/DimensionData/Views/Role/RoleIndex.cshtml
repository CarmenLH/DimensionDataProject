@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center" style="padding: 10px 0px 50px 0px">List of Roles</h1>
<a class="btn btn-outline-primary" style="padding: 2px 10px; white-space: pre" asp-action="CreateRoles">Create New Role</a>
<br />
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>